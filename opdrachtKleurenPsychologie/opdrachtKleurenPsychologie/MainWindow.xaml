<Window x:Class="opdrachtKleurenPsychologie.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:opdrachtKleurenPsychologie"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="LightGray">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock HorizontalAlignment="Left" Height="28" Margin="63,28,0,0" TextWrapping="Wrap" Text="Kleurenpsychologie" VerticalAlignment="Top" Width="108"/>
        <Image HorizontalAlignment="Left" Height="101" Margin="686,10,0,0" VerticalAlignment="Top" Width="100" Source="/PXL.png"/>
        <Image x:Name="redImage" HorizontalAlignment="Left" Height="81" Margin="171,110,0,0" VerticalAlignment="Top" Width="122" Source="/Rood.png" MouseEnter="redImage_MouseEnter" MouseLeftButtonDown="redImage_MouseLeftButtonDown"  />
        <Image x:Name="blueImage" HorizontalAlignment="Left" Height="81" Margin="336,217,0,0" VerticalAlignment="Top" Width="121" Source="/Blauw.png" MouseEnter="blueImage_MouseEnter" MouseLeftButtonDown="blueImage_MouseLeftButtonDown"/>
        <Image x:Name="yellowImage" HorizontalAlignment="Left" Height="81" Margin="336,110,0,0" VerticalAlignment="Top" Width="121" Source="/Geel.png" MouseEnter="yellowImage_MouseEnter" MouseLeftButtonDown="yellowImage_MouseLeftButtonDown"/>
        <Image x:Name="greenImage" HorizontalAlignment="Left" Height="80" Margin="171,217,0,0" VerticalAlignment="Top" Width="122" Source="/Groen.png" MouseEnter="greenImage_MouseEnter" MouseLeftButtonDown="greenImage_MouseLeftButtonDown"/>
        <TextBlock HorizontalAlignment="Left" Height="28" Margin="142,324,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="64"><Run Language="nl-be" Text="Kleurcode:"/></TextBlock>
        <TextBox x:Name="collorcodeTextbox" HorizontalAlignment="Left" Height="28" Margin="211,323,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="110"/>


    </Grid>
</Window>
